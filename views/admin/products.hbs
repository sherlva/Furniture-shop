<h1>{{title}}</h1>
<a href="/admin/products/add" class="btn btn-sm bg-teal">create</a>
<section class="content">

  <!-- Default box -->
  <div class="card card-solid">
    <div class="card-body pb-0">
      <div class="row">
        {{#each products}}
          <div
            class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column"
          >
            <div class="card bg-light d-flex flex-fill">
              <div class="card-header text-muted border-bottom-0">
                {{category.name}}
              </div>
              <div class="col-5 text-center">
                <img
                  src="{{img}}"
                  alt="user-avatar"
                  class="img-circle img-fluid"
                />
              </div>
              <div class="card-body pt-0">
                <div class="row">
                  <div class="col-7">
                    <h2 class="lead"><b>{{name}}</b></h2>
                    <p class="text-muted text-sm"><b>Price: </b>{{price}}$</p>
                  </div>

                </div>
              </div>
              <div class="card-footer">
                <div class="text-right">
                  <a href="/admin/products/update/{{_id}}" class="btn btn-sm bg-teal">
                    <i class="fa-solid fa-arrows-rotate"></i>
                    Edit
                  </a>
                  <a
                    href="/admin/products/delete/{{_id}}"
                    class="btn btn-sm btn-primary"
                  >
                    <i class="fa-solid fa-trash"></i>
                    delete
                  </a>
                </div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>